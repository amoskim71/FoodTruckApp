<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_customer_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.upenn.cis350.foodtruckapp.CustomerMainMenuActivity"
    android:background="@android:color/white">


    <Button
        android:text="Top Food Trucks"
        android:textSize="12pt"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_top_trucks"
        android:height = "120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="46dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="topFoodTrucksOnClick (CustomerMainMenuActivity)" />

    <Button
        android:text="Food Trucks Near Me"
        android:textSize="12pt"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/button_style"
        android:id="@+id/button_near_me"
        android:height = "120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="nearMeOnClick (CustomerMainMenuActivity)" />

    <Button
        android:text="My Favorite Trucks"
        android:textSize="12pt"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_favs"
        android:height = "120dp"
        android:layout_below="@+id/button_near_me"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="favesOnClick (CustomerMainMenuActivity)" />

    <Button
        android:text="Sign Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign_out"
        android:onClick="sign_out_onClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <Button
        android:text="Map View"
        android:id="@+id/button_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>
