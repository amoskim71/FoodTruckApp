<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_customer_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.upenn.cis350.foodtruckapp.CustomerMainMenuActivity">

    <Button
        android:id="@+id/button_top_trucks"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:height="120dp"
        android:background="@drawable/button_style"
        android:text="Top Food Trucks"
        android:textAllCaps="false"
        android:textSize="12pt"
        android:textStyle="bold"
        android:layout_below="@+id/button_favs"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button_near_me"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:height="120dp"
        android:background="@drawable/button_style"
        android:text="Food Trucks Near Me"
        android:textAllCaps="false"
        android:textSize="12pt"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_favs"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_marginTop="30dp"
        android:height="120dp"
        android:background="@drawable/button_style"
        android:elevation="0dp"
        android:text="My Favorite Trucks"
        android:textAllCaps="false"
        android:textSize="12pt"
        android:textStyle="bold"
        android:layout_below="@+id/button_near_me"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="251dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:paddingTop="0dp"
        android:weightSum="1"
        android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:text="Total:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_shopping_cart"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="17dp"
            android:layout_weight="0.41"
            android:text="$00.00"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="$00.00" />

        <Button
            android:id="@+id/sign_out"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_weight="0.35"
            android:width="0dp"
            android:onClick="sign_out_onClick"
            android:text="Sign Out"
            android:textSize="17sp" />

    </LinearLayout>

    <Button
        android:id="@+id/button_social_feed"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_weight="1"
        android:height="120dp"
        android:background="@drawable/button_style"
        android:elevation="0dp"
        android:text="Social Feed"
        android:textAllCaps="false"
        android:textSize="12pt"
        android:textStyle="bold"
        android:layout_below="@+id/button_top_trucks"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>


