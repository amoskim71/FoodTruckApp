<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_customer_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.upenn.cis350.foodtruckapp.CustomerMainMenuActivity">

    <LinearLayout
        android:id="@+id/main_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:weightSum="6"
        android:layout_above="@+id/linearLayout2">

        <Button
            android:id="@+id/button_near_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:paddingBottom="1dp"
            android:text="@string/near_me"
            android:textAllCaps="false"
            android:textSize="12pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_top_trucks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="@string/top_food_trucks"
            android:textAllCaps="false"
            android:textSize="12pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_social_feed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="@string/social_feed"
            android:textAllCaps="false"
            android:textSize="12pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_favs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="@string/my_favorite_trucks"
            android:textAllCaps="false"
            android:textSize="12pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:onClick="shareOnClick"
            android:text="@string/share"
            android:textAllCaps="false"
            android:textSize="12pt"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="251dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:paddingTop="0dp"
        android:weightSum="1"
        android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/total"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_shopping_cart"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_weight="0.41"
            android:text="@string/zero"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="$00.00" />

        <Button
            android:id="@+id/sign_out"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:width="0dp"
            android:onClick="signOutOnClick"
            android:text="@string/sign_out"
            android:textSize="17sp" />

    </LinearLayout>



</RelativeLayout>


