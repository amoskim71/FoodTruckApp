<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_truck"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.upenn.cis350.foodtruckapp.TruckActivity">

    <Button
        android:text="1 Star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:id="@+id/rating1" />

    <Button
        android:text="2 Star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rating1"
        android:layout_alignEnd="@+id/rating1"
        android:layout_marginTop="30dp"
        android:id="@+id/rating2" />

    <Button
        android:text="3 Star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rating2"
        android:layout_alignStart="@+id/rating2"
        android:layout_marginTop="35dp"
        android:id="@+id/rating3" />

    <Button
        android:text="4 Star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rating3"
        android:layout_alignStart="@+id/rating3"
        android:layout_marginTop="39dp"
        android:id="@+id/rating4" />

    <Button
        android:text="5 Star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rating4"
        android:layout_alignStart="@+id/rating4"
        android:layout_marginTop="33dp"
        android:id="@+id/rating5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/ratingText"
        android:gravity="center"
        />

</RelativeLayout>
