<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/vendor_orders_layout"
    android:descendantFocusability="blocksDescendants"
    android:clickable="true">

    <ListView
        android:id="@+id/order_list"
        android:layout_width="wrap_content"
        android:layout_height="267dp"
        android:layout_weight="0.97"
        android:clickable="true"
        android:elevation="24dp"
        android:focusable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_vendor_order_cancelled"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:height="120dp"
            android:background="@drawable/button_style"
            android:onClick="OrderCancelledOnClick"
            android:text="@string/cancel_order"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_vendor_order_ready"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:height="120dp"
            android:background="@drawable/button_style"
            android:onClick="OrderReadyOnClick"
            android:text="@string/order_ready"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/orderDone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:height="120dp"
            android:background="@drawable/button_style"
            android:onClick="orderDone_OnClick"
            android:text="@string/done"
            android:textAllCaps="false"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/noShow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:height="120dp"
            android:background="@drawable/button_style"
            android:onClick="OrderNoShowOnClick"
            android:text="@string/no_show"
            android:textAllCaps="false"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>