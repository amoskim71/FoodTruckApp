<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.upenn.cis350.foodtruckapp.VendorProfileActivity"
    tools:showIn="@layout/activity_vendor_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:layout_width="match_parent"
            android:layout_weight="0.12"
            android:layout_height="200dp"
            android:id="@+id/vendor_profile_image"
            android:text="Please select an image for your truck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/Hours"
            android:textSize="30sp"
            android:textColor="@color/BLACK"
            android:textAlignment="center"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:id="@+id/textView"
            android:text="@string/Weekdays"
            android:textSize="20sp"
            android:textColor="@color/BLACK" />


        <LinearLayout
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <Spinner
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_vendor_open_weekday_time"
                    android:entries="@array/vendor_open_time_options">
                </Spinner>

                <Spinner
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_vendor_open_weekday_period"
                    android:entries="@array/vendor_open_period_options">
                </Spinner>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textView1"
                    android:text="  -"
                    android:textSize="30sp"
                    android:textColor="@color/BLACK"
                    />

                <Spinner
                    android:layout_width="63dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_vendor_close_weekday_time"
                    android:entries="@array/vendor_close_time_options">
                </Spinner>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/spinner_vendor_close_weekday_period"
                    android:entries="@array/vendor_close_period_options">
                </Spinner>

            </LinearLayout>

            <TextView
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.43"
                android:id="@+id/textView2"
                android:text="@string/Weekends"
                android:textSize="20sp"
                android:textColor="@color/BLACK" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <Spinner
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_vendor_open_weekend_time"
                    android:entries="@array/vendor_open_time_options">
                </Spinner>
                <Spinner
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_vendor_open_weekend_period"
                    android:entries="@array/vendor_open_period_options">
                </Spinner>

                <TextView
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:text="  -"
                    android:textSize="30sp"
                    android:textColor="@color/BLACK"
                    android:layout_margin="0dp" />

                <Spinner
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_vendor_close_weekend_time"
                    android:entries="@array/vendor_close_time_options">
                </Spinner>

                <Spinner
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_vendor_close_weekend_period"
                    android:entries="@array/vendor_close_period_options">
                </Spinner>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView4"
            android:text="@string/Menu"
            android:textSize="30sp"
            android:textColor="@color/BLACK"
            android:layout_weight="0.03"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="15dp" />


        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_listview">
        </ListView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView5"
            android:text="@string/Reviews"
            android:textSize="30sp"
            android:textColor="@color/BLACK"
            android:layout_weight="0.03"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="15dp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView6"
                android:text="@string/large_text"
                android:textSize="12sp"
                android:textColor="@color/BLACK"
                android:layout_weight="0.03"
                android:layout_marginTop="15dp" />

            <View
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_alignLeft="@id/textView6"
                android:layout_alignRight="@id/textView6"
                android:layout_alignBottom="@id/textView6"></View>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView7"
                android:text="@string/large_text_1"
                android:textSize="12sp"
                android:textColor="@color/BLACK"
                android:layout_weight="0.03"
                android:layout_marginTop="15dp" />


        </RelativeLayout>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
